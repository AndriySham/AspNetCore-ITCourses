@model IEnumerable<CourseModel>
@{
    ViewData["Title"] = "Cuorses";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Courses</title>
    </head>
    <body>
        <h3 class="title">Courses</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="color-link"><a asp-controller="Group" asp-action="DisplayGroup" asp-route-Id="@course.Id">@course.Name</a></td>
                        <td>@course.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>